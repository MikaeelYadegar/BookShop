@model RegisterDto
@{
    ViewData["Title"] = "Register";
}

<div class="LoginContainer">
    <form asp-action="Register" method="post" class="register-form">
        <h2>ثبت نام</h2>
        <div class="input-group">
            <label asp-for="Email">ایمیل</label>
            <input asp-for="Email" type="email" id="email" name="email" required>
        </div>
        <div class="input-group">
            <label asp-for="Password">رمز عبور</label>
            <input asp-for="Password" type="password" id="password" name="password" required>
        </div>
        <div class="input-group">
            <label asp-for="ConfirmPassword">تکرار رمز عبور</label>
            <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" name="ConfirmPassword" required>
        </div>
        <button type="submit" style="font-family: Bykan; font-size: 18px;">ثبت نام</button>
        <p>آیا اکانت داری? <a href="login.html">ورود</a></p>
    </form>
</div>

