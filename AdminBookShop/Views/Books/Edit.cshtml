@model Core.BookService.BookDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="/api/File/GetFile?filename=@Model.ImgName" width="50px" />
                <label asp-for="Img" class="control-label"></label>
          
                <input type="file" asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthoreId" class="control-label"></label>
                <select asp-for="AuthoreId" class="form-control" asp-items="ViewBag.AuthoreId"></select>
                <span asp-validation-for="AuthoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class=control-label>IsAvail</label>
                <input asp-for="IsAvail" class="form-check-control" />
            </div>
            <div class="form-group">
                <label class=control-label>ShowHomePage</label>
                <input asp-for="ShowHomePage" class="form-check-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
